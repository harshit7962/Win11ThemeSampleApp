<Window x:Class="Win11ThemeSampleApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Win11ThemeSampleApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Button Content="Open Popup" Click="OpenPopup_Click"/>
            <Button Content="Close Popup" Click="ClosePopup_Click" />
        </StackPanel>
        

        <!-- Define the Popup -->
        <Popup Name="myPopup" Placement="Bottom" IsOpen="False">
            <Border BorderBrush="Black" BorderThickness="1" Background="LightGray">
                <TextBlock Margin="10" Text="This is a Popup!"/>
            </Border>
        </Popup>
    </Grid>
</Window>
